@using SemanticAspire.Web.Components.Controls
@inherits LayoutComponentBase

<div class="layout-main">
        
    <FluentHeader>Azure IoT Operations</FluentHeader>
        
    <div class="layout-main-center">
        
        <GlobalNavigation/>
        
        <main class="layout-main-center-far">
            @Body
        </main>
    </div>
        
    <FluentFooter>
        <div>https://github.com/chieftn/SemanticAspire</div>
    </FluentFooter>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
