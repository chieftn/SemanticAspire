@page "/"
@rendermode InteractiveServer
@inject ChatApiClient ChatClient

<PageTitle>Home</PageTitle>

<div class="layout-view">
    <div class="chat-view-center">
        @foreach (var response in responses)
        {
            <div>@response.response</div>
        }
    </div>


    <div class="chat-view-bottom" >
        <div class="chat-prompt">
            <FluentTextField 
            @bind-Value=prompt 
            Placeholder="Message IoT Operations" 
            Appearance="FluentInputAppearance.Filled"
            Immediate=true
            Autofocus=true
            />

            <div class="chat-prompt-commands">
                <FluentButton
                Disabled="String.IsNullOrWhiteSpace(prompt)"
                IconStart="@(new Icons.Regular.Size16.Send())"
                Appearance="Appearance.Stealth"
                OnClick="SubmitPromptAsync"/>
            </div>
        </div>
    </div>
</div>

@code {
    List<PromptMachine> machines = [];
    string? prompt;



    void SubmitPromptAsync()
    {
        var machine = new PromptMachine(ChatClient) { Prompt = prompt };
        this.machines.Add(machine);

        prompt = string.Empty;
    }
}


